{
    "version": 2,
    "builds": [
      {
        "src": "ShelfSpace_Project/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.10" }
      },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "."
        }
      }
    ],
    "routes": [
      {
        "src": "/static/(.*)",
        "dest": "/static/$1"
      },
      {
        "src": "/(.*)",
        "dest": "ShelfSpace_Project/wsgi.py"
      }
    ],
    "env": {
      "DJANGO_SETTINGS_MODULE": "ShelfSpace_Project.settings"
    }
  }